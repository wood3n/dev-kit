{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "master",
  "targetDefaults": {
    "nx-release-publish": {
      "dependsOn": ["^build"]
    }
  },
  "release": {
    "versionPlans": true,
    "projects": ["packages/*"],
    "projectsRelationship": "independent",
    "version": {
      "generatorOptions": {
        "currentVersionResolver": "registry",
        "skipLockFileUpdate": true
      }
    },
    "changelog": {
      "projectChangelogs": {
        "renderOptions": {
          "authors": true,
          "mapAuthorsToGitHubUsernames": true,
          "commitReferences": true,
          "versionTitleDate": true
        }
      }
    },
    "git": {
      "commit": false,
      "stageChanges": false,
      "tag": false
    }
  }
}
